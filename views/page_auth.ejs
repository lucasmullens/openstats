<%= include part_head %>

<style type="text/css">
	.content{
		overflow: hidden;
	}
	.access{
	}
</style>
<div class="content" >
	<div class="col-sm-6 col-xs-12 access account-access right-bottom-edge active">
		<h1>Register</h1>
		<form method="POST" action="/create">
			<input name="email" type="email" class="form-control" placeholder="Email Address">
			<input name="user_name" type="text" class="form-control" placeholder="Username">
			<input name="password" type="password" class="form-control" placeholder="Password">
			<input name="confirm" type="password" class="form-control" placeholder="Confirm">
			<input type="submit" class="btn btn-primary pull-right" value="Register">
			<div class="clearfix"></div>
		</form>	
	</div>
	<div class="col-sm-6 col-xs-12 access accout-create right-bottom-edge" >
		<h1>Login</h1>
		<form method="POST" action="/login">
			<input name="email" type="email" class="form-control" placeholder="Email Address">
			<input name="password" type="password" class="form-control" placeholder="Password">
			<input type="submit" class="btn btn-primary pull-right" value="Login">
			<div class="clearfix"></div>
		</form>	
	</div>
	<div class="clearfix"></div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$('.access').click(function(){
			$('.access').removeClass("active");
			$(this).addClass("active");
		});
		$('.form-control').on("focus", function(){
			$('.access').removeClass("active");
			$($(this).parent().parent()).addClass("active");
		});
		$('.btn').on("focus", function(){
			$('.access').removeClass("active");
			$($(this).parent().parent()).addClass("active");
		});
		$(".access").css("min-height", $(".account-access").outerHeight());
	});

</script>

<%= include part_foot %>